<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    tools:context=".Helper.VehiclesInfoBottomSheet">


    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:padding="4dp"
        android:src="@drawable/bus_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:padding="4dp"
        android:src="@drawable/route_icon"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bottom_sheet_road"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:src="@drawable/ic_clock_start"
        app:layout_constraintBottom_toBottomOf="@+id/cl_while_engg_off"
        app:layout_constraintEnd_toStartOf="@+id/cl_while_engg_on"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/cl_while_engg_off"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_bottom_sheet_vehicle_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:paddingBottom="6dp"
        android:text="Vechile Name"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintStart_toEndOf="@+id/imageView3"
        app:layout_constraintTop_toTopOf="@+id/imageView3" />

    <TextView
        android:id="@+id/tv_bottom_sheet_vehicle_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="6dp"
        android:text="( Female Student )"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="@+id/tv_bottom_sheet_vehicle_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_bottom_sheet_vehicle_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/tv_bottom_sheet_road"
        android:layout_width="347dp"
        android:layout_height="43dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="4dp"
        android:background="@drawable/four_side_round"
        android:backgroundTint="#00FFFFFF"
        android:gravity="center_vertical"
        android:paddingLeft="0dp"
        android:paddingTop="8dp"
        android:text="Tarminal -> Meril -> Gasspara"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_sheet_vehicle_name"
        tools:paddingBottom="8dp" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_while_engg_off"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/four_side_round"
        android:backgroundTint="#00FFFFFF"
        android:padding="0dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="@+id/tv_bottom_sheet_road"
        app:layout_constraintStart_toStartOf="@+id/tv_bottom_sheet_road"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_sheet_road">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NEXT TRIP"
            android:textColor="@color/black"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:textStyle="bold" />

        <TextView
            android:id="@+id/tv_bottom_sheet_next_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:text="1:25 PM"
            android:textColor="#80000000"
            android:textSize="15sp"
            app:layout_constraintStart_toStartOf="@+id/textView4"
            app:layout_constraintTop_toBottomOf="@+id/textView4" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_while_engg_on"
        android:layout_width="350dp"
        android:layout_height="60dp"
        android:background="#00FFFFFF"
        android:padding="0dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@+id/cl_while_engg_off"
        app:layout_constraintEnd_toEndOf="@+id/tv_bottom_sheet_road"
        app:layout_constraintTop_toBottomOf="@+id/tv_bottom_sheet_road">

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Update "
            android:textColor="@color/black"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_bottom_sheet_last_update"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="3 minute ago"
            android:textColor="#9E000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/textView6"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bottom_sheet_last_pass_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:paddingBottom="8dp"
            android:text="Terminal Stopage Passed"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView6" />

        <TextView
            android:id="@+id/tv_bottom_sheet_last_pass_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:text="5 minute ago"
            android:textColor="#9E000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/tv_bottom_sheet_last_pass_location"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/tv_bottom_sheet_last_pass_location" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>