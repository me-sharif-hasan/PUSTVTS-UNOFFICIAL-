<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:onClick="BusIC_clickListener"
        android:src="@drawable/bus_icon"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select option what you wants"
        android:gravity="center"
        android:padding="8dp"
        android:textSize="16dp"
        android:textColor="@color/black"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/teal_700"
        android:layout_marginTop="8dp" />

    <LinearLayout
        android:id="@+id/ll_nav_vehicles"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/four_side_round_light_color_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/bus_icon"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Vehicles"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nav_stoppages"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/four_side_round_light_color_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_stopage"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Stoppages"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nav_add_alarm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/four_side_round_light_color_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_clock"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Alarm"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="8dp"/>
        <ImageView
            android:id="@+id/iv_nav_clock_bell"
            android:visibility="visible"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="8dp"
            android:src="@drawable/ic_bell"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nav_help"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/four_side_round_light_color_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_help"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Help"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_nav_logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/four_side_round_light_color_background"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_logout"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Log Out"
            android:textColor="@color/black"
            android:textSize="16dp"
            android:textStyle="bold"
            android:padding="8dp"/>

    </LinearLayout>

</LinearLayout>